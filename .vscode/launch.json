{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Tactics Jest test file",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
      "args": [
        "${fileBasenameNoExtension}",
        "--runInBand",
        "--watchAll=false",
        "--coverage=false",
        "--no-cache"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "smartStep": true,
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/jest/**",
        "**/node_modules/ts-jest/**"
      ],
      "outFiles": ["${workspaceFolder}/**/*.ts"],
      "sourceMaps": true
    },
  ]}