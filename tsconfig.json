{
  "compilerOptions": {
    "target": "ESNext",
    "outDir": "dist",
    "declaration": true,
    "rootDir": ".",
    "module": "CommonJS",
    "moduleResolution": "node",
    "baseUrl": ".", 
    "paths": {
    "@chess-tactics": ["./src"],
      "@tactics": ["./src/tactics/index"] ,
      "@types": ["./src/types"],
      "@utils": ["./src/utils/index"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "types": ["jest", "node"]
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules"]

}